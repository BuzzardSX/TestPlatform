<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<base href="~/" />
	<link rel="stylesheet" href="~/bootstrap.min.css" />
	<link rel="stylesheet" href="~/bootstrap-icons.css" />
	<link rel="stylesheet" href="~/css/overrides.css" />
	<style>
		:root {
			@* --bs-primary: #2C73D2; *@
			--bs-primary: #54AD53;
		}

		.btn-outline-primary {
			@* background-color: var(--bs-primary); *@
			color: var(--bs-primary);
			border-color: var(--bs-primary);
		}

		.active {
			background-color: rgba(255, 255, 255, 0.25);
		}

		.accordion-item, .accordion-button {
			background-color: transparent;
		}

		#MainContainer {
			display: grid;
			grid-template-areas: "sidebar body";
			grid-template-columns: 2fr 7fr;
		}

		#MainContainerSidebar {
			@* background: #eef6ff; *@
			background-image: linear-gradient(135deg, #2C73D2 0%, #008F7A 70%);
			grid-area: sidebar;
			height: 100vh;
		}

		#MainContainerSidebar .bi-journal {
			margin-right: 12px !important;
		}

		#MainContainerSidebar .accordion-body {
			padding-left: 42px;
		}

		#MainContainerSidebar .accordion-button::after {
			background-image: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23ffffff'><path fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/></svg>") !important;
		}

		#MainContainerSidebar .accordion-button:not(.collapsed) {
			background-color: transparent !important;
			box-shadow: none;
		}

		#MainContainerSidebar .accordion-item {
			border-bottom: none;
		}

		#MainContainerSidebar .nav-item .active {
			background-color: rgba(255, 255, 255, 0.25);
		}

		#MainContainerBody {
			grid-area: body;
		}
	</style>
	@RenderSection("Stylesheets", false)
</head>
<body class="d-flex align-items-center vh-100 bg-light">
	@RenderBody()
	<script src="_framework/blazor.server.js"></script>
	<script src="~/bootstrap.min.js"></script>
</body>
</html>
